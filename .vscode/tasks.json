{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "detail": "debug build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/p:Configuration=Debug",
                "/p:DebugSymbols=true",
                "/p:DebugType=full",
                "${workspaceFolder}/FLS_CS.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:PerformanceSummary;Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "detail": "release build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "/p:Configuration=Release",
                "/p:DebugSymbols=false",
                "/p:DebugType=none",
                "${workspaceFolder}/FLS_CS.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn":["Signation"]
        },
        {
            "label":"signation",
            "detail": "sign file",
            "command":"signtool sign /f fizzfizz.pfx /p unicorn6 /t http://timestamp.digicert.com /fd SHA256 ${workspaceFolder}/bin/Release/net5.0-windows/win10-x64/publish/FLS_CS.exe",
            "type": "shell"
        }
    ]
}